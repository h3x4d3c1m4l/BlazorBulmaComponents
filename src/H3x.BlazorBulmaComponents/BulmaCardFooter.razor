@inherits BulmaComponentBase

<div class="card">

    @* Image *@
    <div class="card-image">
        <figure class="image">
            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
    </div>

    @* Header *@
    @if (HeaderTitle != null || !string.IsNullOrWhiteSpace(Title))
    {
        <header class="card-header">
            <div class="card-header-title">
                @if (HeaderTitle != null)
                {
                    @HeaderTitle
                }
                else
                {
                    <p>@Title</p>
                }
            </div>
            @if (HeaderIcon != null)
            {
                <div class="card-header-icon">
                    @HeaderIcon
                </div>
            }
        </header>
    }

    @* Content *@
    <div class="card-content">
        @ChildContent
    </div>

    @* Footer *@
    @if (Footer != null)
    {
        <footer class="card-footer">
            @* TODO: *@
            @*<a href="#" class="card-footer-item">Save</a>
                <a href="#" class="card-footer-item">Edit</a>
                <a href="#" class="card-footer-item">Delete</a>*@
            @Footer
        </footer>
    }

</div>

@code {
    [Parameter]
    public string ImageUrl { get; set; }

    /// <summary>
    /// Card title (will be used when HeaderTitleContent is null).
    /// </summary>
    [Parameter]
    public string Title { get; set; }

    // header

    /// <summary>
    /// Card header title render fragment.
    /// </summary>
    [Parameter]
    public RenderFragment HeaderTitle { get; set; }

    /// <summary>
    /// Card header icon render fragment.
    /// </summary>
    [Parameter]
    public RenderFragment HeaderIcon { get; set; }

    // content

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    // footer

    [Parameter]
    public RenderFragment Footer { get; set; }
}